<script>
    // Ensure Juicer content is properly loaded on homepage
    document.addEventListener('DOMContentLoaded', function() {
        const loadJuicerContent = function() {
            const items = document.querySelectorAll('.limited-feed .feed-item');
            // Hide all items beyond the third one
            for (let i = 3; i < items.length; i++) {
                if (items[i]) items[i].style.display = 'none';
            }
        };
        
        // Try immediately and again after a delay
        setTimeout(loadJuicerContent, 1000);
        setTimeout(loadJuicerContent, 3000);
    });
</script> 